<%- include('../layouts/header') %>
<div class="container mt-5">
  <h1>Vehicle Management</h1>
  <% if (messages.success) { %>
    <div class="alert alert-success"><%= messages.success %></div>
  <% } %>
  <% if (messages.error) { %>
    <div class="alert alert-danger"><%= messages.error %></div>
  <% } %>
  <a href="/vehicles/new" class="btn btn-primary mb-3">Add New Vehicle</a>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Brand</th>
        <th>Price</th>
        <th>Type</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% vehicles.forEach(vehicle => { %>
        <tr>
          <td><%= vehicle.name %></td>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.price %></td>
          <td><%= vehicle.type %></td>
          <td><img src="<%= vehicle.image %>" alt="<%= vehicle.name %>" style="max-width: 100px;"></td>
          <td>
            <a href="/vehicles/<%= vehicle._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
            <form action="/vehicles/<%= vehicle._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../layouts/footer') %>